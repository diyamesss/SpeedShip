@model Category

<form method="post">
	<div class="border p-3">
		<div class="row">
			<h2>Update Category</h2>
			<hr />
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.CategoryId"></label>
			<input asp-for="@Model.CategoryId" class="form-control" readonly />
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.CategoryName"></label>
			<input asp-for="@Model.CategoryName" class="form-control" />
			<span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.Description"></label>
			<input asp-for="@Model.Description" class="form-control" />
			<span asp-validation-for="@Model.Description" class="text-danger"></span>
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.DisplayOrder"></label>
			<input asp-for="@Model.DisplayOrder" class="form-control" />
			<span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.CreatedBy"></label>
			<input asp-for="@Model.CreatedBy" class="form-control" readonly/>
		</div>
		<div class="mb-2 row">
			<label asp-for="@Model.DateCreated"></label>
			<input asp-for="@Model.DateCreated" class="form-control" readonly/>
		</div>
		<div class="row">
			<div class="col-4">
				<input type="submit" class="btn btn-primary form-control" value="Update" />
			</div>
			<div class="col-4">
				<a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@Model.CategoryId" class="btn btn-danger form-control">Delete</a>
			</div>
			<div class="col-4">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}