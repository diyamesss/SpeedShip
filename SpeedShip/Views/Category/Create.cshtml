@model Category

<form method="post">
	<div class="container">
		<div class="mb-2">
			<label asp-for="@Model.CategoryName"></label>
			<input asp-for="@Model.CategoryName" class="form-control" />
			<span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-2">
			<label asp-for="@Model.Description"></label>
			<input asp-for="@Model.Description" class="form-control" />
			<span asp-validation-for="@Model.Description" class="text-danger"></span>
		</div>
		<div class="mb-2">
			<label asp-for="@Model.DisplayOrder"></label>
			<input asp-for="@Model.DisplayOrder" class="form-control" />
			<span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 text-end">
				<input type="submit" class="btn btn-primary w-50" />
			</div>
			<div class="col-6 text-start">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-50">Back</a>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}